{
  "exclude": ["node_modules"],
  "extends": "@repo/typescript-config/vite.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@styles/*": ["src/styles/*"],
      "@constants/*": ["src/constants/*"],
      "@pages/*": ["src/pages/*"],
      "@calls/*": ["src/calls/*"]
    },
  },
  "include": ["src"]
}
