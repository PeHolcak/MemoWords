{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "lib": ["ES2015"],
    "module": "CommonJS",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@configs/*": ["src/configs/*"],
      "@controllers/*": ["src/controllers/*"],
      "@dtoIns/*": ["src/dtoIns/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@models/*": ["src/models/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@validators/*": ["src/validators/*"],
      "@errors/*": ["src/errors/*"],
    },
  },
  "exclude": ["node_modules"],
  "include": ["."]
}
